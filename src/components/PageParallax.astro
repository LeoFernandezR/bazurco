---
interface PageParallaxProps {
  imageUrl: string;
  title: string;
}

const { imageUrl, title } = Astro.props as PageParallaxProps;
---

<div
  class="h-[80vh] overflow-y-scroll bg-cover bg-fixed bg-center bg-no-repeat shadow-lg mb-8"
  style={`background-image:url('${imageUrl}');`}
>
  <div class="flex h-full items-center justify-center">
    <h1 class="text-4xl font-bold text-white bg-blue-500 p-4">{title}</h1>
  </div>
</div>
