---
interface PageParallaxProps {
  imageUrl: string;
  title: string;
}

const { imageUrl, title } = Astro.props as PageParallaxProps;
---

<div
  class="h-[80vh] bg-cover bg-fixed bg-center bg-no-repeat shadow-lg"
  style={`background-image:url('${imageUrl}');`}
>
  <div class="flex h-full items-center justify-center">
    <h1 class="text-8xl font-bold text-white bg-indigo-500 p-4">{title}</h1>
  </div>
</div>
