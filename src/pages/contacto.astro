---
import Layout from "../layouts/Layout.astro";
import {
  IconMail,
  IconMap2,
  IconPhone,
  IconBrandInstagram,
  IconBrandLinkedin,
} from "@tabler/icons-react";
---

<Layout title="Bazurco - Contacto" description="Información de contacto">
  <div
    class="py-20 bg-sky-900 flex justify-center items-center flex-col text-white"
  >
    <h3 class="text-6xl font-bold">Contáctanos</h3>
  </div>

  <div class="w-[90%] mx-auto py-4 text-lg flex flex-col gap-6">
    <div class="flex flex-col gap-4">
      <div class="flex gap-4 items-center">
        <div class="w-[100px] text-blue-400">
          <IconMail className="w-full h-auto" />
        </div>
        <p class="text-2xl">Bazurco@gmail.com</p>
      </div>
      <div class="flex gap-4 items-center">
        <div class="w-[100px] text-blue-400">
          <IconMap2 className="w-full h-auto" />
        </div>
        <p class="text-2xl">Calle Bazurco 2355, CABA</p>
      </div>
      <div class="flex gap-4 items-center">
        <div class="w-[100px] text-blue-400">
          <IconPhone className="w-full h-auto" />
        </div>
        <p class="text-2xl">+54 9 11-2260-1678</p>
      </div>
    </div>
    <!-- Siguenos en nuestras redes sociales (Linkedin e Instagram): -->
    <div class="flex flex-col gap-2 items-center">
      <p class="text-xl">¡Seguinos en nuestras redes!</p>
      <nav class="flex gap-6">
        <a
          href="https://www.instagram.com/bazurco_s.i?igsh=cG10NGVxN2JxYThn"
          target="_blank"
          rel="noopener noreferrer"
          class="w-[50px] text-blue-400 hover:text-blue-600 transition-colors"
        >
          <IconBrandInstagram className="w-full h-auto" />
        </a>
        <a
          href="https://www.linkedin.com/company/bazurco/"
          target="_blank"
          rel="noopener noreferrer"
          class="w-[50px] text-blue-400 hover:text-blue-600 transition-colors"
        >
          <IconBrandLinkedin className="w-full h-auto" />
        </a>
      </nav>
    </div>
  </div>
</Layout>
